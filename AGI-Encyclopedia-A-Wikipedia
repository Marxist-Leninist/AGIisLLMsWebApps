<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Single-File HTML Web App</title>
    <style>
        /* Basic styling for navigation and content */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #3366cc;
            color: white;
            padding: 1em;
            text-align: center;
        }
        nav {
            background-color: #f2f2f2;
            padding: 1em;
            overflow: hidden;
        }
        nav a {
            margin: 0 1em;
            color: #333;
            text-decoration: none;
            font-weight: bold;
        }
        main {
            padding: 2em;
        }
        footer {
            background-color: #ddd;
            text-align: center;
            padding: 1em;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>

<header>
    <h1>Welcome to Your Web App</h1>
</header>

<nav>
    <a href="#" onclick="loadContent('home')">Home</a>
    <a href="#" onclick="loadContent('about')">About</a>
    <a href="#" onclick="loadContent('contact')">Contact</a>
</nav>

<main id="content">
    <h2>Home</h2>
    <p>This is the home page. Click the links above to navigate.</p>
</main>

<footer>
    &copy; <span id="year"></span> Your Website Name
</footer>

<script>
    // JavaScript to handle content loading
    function loadContent(page) {
        const content = document.getElementById('content');
        if (page === 'home') {
            content.innerHTML = '<h2>Home</h2><p>This is the home page. Click the links above to navigate.</p>';
        } else if (page === 'about') {
            content.innerHTML = '<h2>About</h2><p>Information about your website.</p>';
        } else if (page === 'contact') {
            content.innerHTML = '<h2>Contact</h2><p>Contact details go here.</p>';
        }
    }

    // Set current year in footer
    document.getElementById('year').textContent = new Date().getFullYear();
</script>

</body>
</html>
